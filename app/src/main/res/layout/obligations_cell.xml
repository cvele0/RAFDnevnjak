<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/obligationsCellLayout"
    android:orientation="horizontal"
    android:background="@drawable/empty_layout_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/showObligation"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/show_obligation" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeOfObligation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="09:30 - 10:30"
                android:textSize="28sp"
                android:textColor="@color/black"
                app:srcCompat="@drawable/show_obligation" />

            <ImageView
                android:id="@+id/editObligation"
                android:layout_weight="1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/edit_obligation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameOfObligation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Algebra"
                android:textSize="28sp"
                android:textColor="@color/black"
                app:srcCompat="@drawable/edit_obligation" />

            <ImageView
                android:id="@+id/deleteObligation"
                android:layout_weight="1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/delete_obligation" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
